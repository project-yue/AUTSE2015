            form(id='addEvidenceForm' action="javascript:void(0);")
              div
                h3 Information about article
                br
                h5 Bibliographic info
                span.input
                  label Title
                  &ensp;
                  input(id = 'addBiblioTitle', type='text', size='50', placeholder='Title')
                br
                span.input
                  label Authors
                  &ensp;
                  input(id = 'addBiblioAuthors', type='text', size='50', placeholder='Authors')
                br
                span.input
                  label Journal
                  &ensp;
                  input(id = 'addBiblioJournal', type='text', size='50', placeholder='Journal')
                br
                span.input
                  label Year
                  &ensp;
                  input(id = 'addBiblioYear', type='text', size='50', placeholder='Year')
                br
