                  &ensp;
                  form(action='')
                    select(id = 'addRating')
                      option(value='1') 1
                      option(value='2') 2
                      option(value='3') 3
                      option(value='4') 4
                      option(value='5') 5
                br
                span.input
                  label Research Level
                  &ensp;
                  form(action='')
                    select(id = 'addResearchLevel')
                      option(value='1') Level 1
                      option(value='2') Level 2
                      option(value='3') Level 3
                      option(value='4') Level 4
                      option(value='5') Level 5
